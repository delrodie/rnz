{% extends 'BOLayout.html.twig' %}

{% block title %}
  {{ parent() }}
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link href="{{ asset('ressources/vendor/css/blog.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block body %}
<!-- BEGIN BREADCRUMBS -->
<div class="breadcrumbs">
  <h1>Publicité</h1>
  <ol class="breadcrumb">
    <li>
      <a href="{{ path('homepage')}}">Accueil</a>
    </li>
    <li>
      <a href="#">Publicité</a>
    </li>
    <li class="active">Pub</li>
  </ol>
  <!-- Sidebar Toggle Button -->
  <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".page-sidebar">
    <span class="sr-only">Toggle navigation</span>
    <span class="toggle-icon">
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    </span>
  </button>
  <!-- Sidebar Toggle Button -->
  </div>
  <!-- END BREADCRUMBS -->
  <!-- BEGIN SIDEBAR CONTENT LAYOUT -->
  <div class="page-content-container">
    <div class="page-content-row">
    <!-- BEGIN PAGE SIDEBAR -->
    <div class="page-sidebar">
      <nav class="navbar" role="navigation"></nav>
    </div>
    <!-- END PAGE SIDEBAR -->
    <div class="page-content-col">
      <!-- BEGIN PAGE BASE CONTENT -->
      <div class="blog-page blog-content-1">
        <div class="row">
          {% for publicite in publicites %}
          <div class="col-md-4">
            <div class="blog-post-sm bordered blog-container">
              <div class="blog-img-thumb">
                <a href="javascript:;">
                  <img src="{{ asset('ressources/images/publicite/' ~ publicite.image.id ~ '.' ~ publicite.image.url )}}" alt="">
                </a>
              </div>
              <div class="blog-post-content">
                <h2 class="blog-title blog-post-title">
                  <a href="javascript:;">{{ publicite.libelle }}</a>
                </h2>
                <p class="blog-post-desc">
                  {{ publicite.situation }}, {{ publicite.activite }}
                </p>
                <div class="blog-post-foot">
                  <div class="blog-post-meta">
                    <i class="fa fa-phone-square fa-lg"></i> +225 {{ publicite.contact }}
                  </div>
                  <div class="blog-post-meta">
                      <a href="{{ path('admin_publicite_edit', { 'id': publicite.id }) }}">
                        <i class="fa fa-edit"></i> Modifier
                      </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    <!-- END PAGE BASE CONTENT -->
    </div>
  </div>
</div>
<!-- END SIDEBAR CONTENT LAYOUT -->

{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <!-- BEGIN PAGE LEVEL PLUGINS -->

  <!-- END PAGE LEVEL PLUGINS -->
{% endblock %}
