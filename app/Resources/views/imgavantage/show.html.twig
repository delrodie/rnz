{% extends 'base.html.twig' %}

{% block body %}
    <h1>Imgavantage</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ imgAvantage.id }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ imgAvantage.url }}</td>
            </tr>
            <tr>
                <th>Alt</th>
                <td>{{ imgAvantage.alt }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{% if imgAvantage.statut %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_imgavantage_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_imgavantage_edit', { 'id': imgAvantage.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
