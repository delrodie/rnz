{% extends 'base.html.twig' %}

{% block body %}
    <h1>Imgavantages list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Url</th>
                <th>Alt</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for imgAvantage in imgAvantages %}
            <tr>
                <td><a href="{{ path('admin_imgavantage_show', { 'id': imgAvantage.id }) }}">{{ imgAvantage.id }}</a></td>
                <td>{{ imgAvantage.url }}</td>
                <td>{{ imgAvantage.alt }}</td>
                <td>{% if imgAvantage.statut %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_imgavantage_show', { 'id': imgAvantage.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_imgavantage_edit', { 'id': imgAvantage.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_imgavantage_new') }}">Create a new imgAvantage</a>
        </li>
    </ul>
{% endblock %}
