{% extends 'BOLayout.html.twig' %}

{% block title %}
  {{ parent() }}
  Liste des beneficiaires
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link href="{{ asset('ressources/vendor/css/datatables/datatables.min.css') }}" rel="stylesheet" type="text/css" />
  <link href="{{ asset('ressources/vendor/css/datatables/datatables.bootstrap.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block body %}
<!-- BEGIN BREADCRUMBS -->
<div class="breadcrumbs">
  <h1>beneficiaires</h1>
  <ol class="breadcrumb">
    <li>
      <a href="#">Accueil</a>
    </li>
    <li>
      <a href="#">beneficiaires</a>
    </li>
    <li class="active">Listes</li>
  </ol>
  <!-- Sidebar Toggle Button -->
  <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".page-sidebar">
    <span class="sr-only">Toggle navigation</span>
    <span class="toggle-icon">
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    </span>
  </button>
  <!-- Sidebar Toggle Button -->
  </div>
  <!-- END BREADCRUMBS -->
  <!-- BEGIN SIDEBAR CONTENT LAYOUT -->
  <div class="page-content-container">
    <div class="page-content-row">
    <div class="page-content-col">
      <!-- BEGIN PAGE BASE CONTENT -->
      <div class="row">
      <div class="col-md-12">
      <!-- BEGIN EXAMPLE TABLE PORTLET-->
      <div class="portlet box blue">
        <div class="portlet-title">
          <div class="caption">
            <i class="fa fa-globe"></i>Liste des beneficiaires
          </div>
          <div class="tools"> </div>
        </div>
        <div class="portlet-body">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
        <thead>
        <tr>
        <th class="text-center"> ID </th>
        <th class="text-center"> MATRICULES </th>
        <th class="text-center"> NOM & PRENOMS </th>
        <th class="text-center"> SEXES </th>
        <th class="text-center"> CONTACTS </th>
        <th class="text-center"> ZONES </th>
        <th class="text-center"> DOMAINES </th>
        <th class="text-center"> PROJETS </th>
        </tr>
        </thead>
          <tbody>
            {% for beneficiaire in beneficiaires %}
            <tr>
              <td class="text-right">{{ beneficiaire.id }}</td>
              <td class="text-center"><a href="{{ path('admin_beneficiaire_show', { 'id': beneficiaire.id }) }}">{{ beneficiaire.matricule }}</a></td>
              <td>{{ beneficiaire.nom }} {{ beneficiaire.prenoms }}</td>
              <td class="text-center">{{ beneficiaire.sexe }}</td>
              <td class="text-center">{{ beneficiaire.flotte }} / {{ beneficiaire.telephone }}</td>
              <td>{{ beneficiaire.zone.libelle|capitalize }}</td>
              <td>
                {% for domaine in beneficiaire.domaines %}
                    {{ domaine.libelle|capitalize }} 
                {% endfor %}
              </td>
              <td>{{ beneficiaire.projet|capitalize }}</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
        </div>
      </div>
      <!-- END EXAMPLE TABLE PORTLET-->
      </div>
      </div>
    <!-- END PAGE BASE CONTENT -->
    </div>
  </div>
</div>
<!-- END SIDEBAR CONTENT LAYOUT -->

{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <!-- BEGIN PAGE LEVEL PLUGINS -->
  <script src="{{ asset('ressources/vendor/js/datatables/datatable.js')}}" type="text/javascript"></script>
  <script src="{{ asset('ressources/vendor/js/datatables/datatables.min.js') }}" type="text/javascript"></script>
  <script src="{{ asset('ressources/vendor/js/datatables/datatables.bootstrap.js') }}" type="text/javascript"></script>
  <script src="{{ asset('ressources/vendor/js/datatables/table-datatables-colreorder.min.js') }}" type="text/javascript"></script>

  <!-- END PAGE LEVEL PLUGINS -->
{% endblock %}
