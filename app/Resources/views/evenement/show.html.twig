{% extends 'base.html.twig' %}

{% block body %}
    <h1>Evenement</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evenement.id }}</td>
            </tr>
            <tr>
                <th>Annonce</th>
                <td>{{ evenement.annonce }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ evenement.lieu }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ evenement.slug }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ evenement.description }}</td>
            </tr>
            <tr>
                <th>Datedeb</th>
                <td>{{ evenement.datedeb }}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{{ evenement.datefin }}</td>
            </tr>
            <tr>
                <th>Heuredeb</th>
                <td>{{ evenement.heuredeb }}</td>
            </tr>
            <tr>
                <th>Heurefin</th>
                <td>{{ evenement.heurefin }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{% if evenement.statut %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Publiepar</th>
                <td>{{ evenement.publiePar }}</td>
            </tr>
            <tr>
                <th>Modifiepar</th>
                <td>{{ evenement.modifiePar }}</td>
            </tr>
            <tr>
                <th>Publiele</th>
                <td>{{ evenement.publieLe }}</td>
            </tr>
            <tr>
                <th>Modifiele</th>
                <td>{{ evenement.modifieLe }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_evenement_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_evenement_edit', { 'id': evenement.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
