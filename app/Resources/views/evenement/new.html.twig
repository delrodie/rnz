{% extends 'BOLayout.html.twig' %}

{% block title %}
  {{ parent() }}
  Enregistrement d'un évènement
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link href="{{ asset('ressources/vendor/css/form/select2.min.css') }}" rel="stylesheet" type="text/css" />
  <link href="{{ asset('ressources/vendor/css/form/select2-bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
  <link href="{{ asset('ressources/vendor/css/form/bootstrap-datepicker3.min.css') }}" rel="stylesheet" type="text/css" />
  <link href="{{ asset('ressources/vendor/css/photo/bootstrap-fileinput.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block body %}
<!-- BEGIN BREADCRUMBS -->
<div class="breadcrumbs">
  <h1>évènement</h1>
  <ol class="breadcrumb">
    <li>
      <a href="{{ path('homepage')}}">Accueil</a>
    </li>
    <li>
      <a href="#">évènement</a>
    </li>
    <li class="active">Enregistrement</li>
  </ol>
  <!-- Sidebar Toggle Button -->
  <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".page-sidebar">
    <span class="sr-only">Toggle navigation</span>
    <span class="toggle-icon">
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    </span>
  </button>
  <!-- Sidebar Toggle Button -->
  </div>
  <!-- END BREADCRUMBS -->
  <!-- BEGIN SIDEBAR CONTENT LAYOUT -->
  <div class="page-content-container">
    <div class="page-content-row">
    <!-- BEGIN PAGE SIDEBAR -->
    <div class="page-sidebar">
      <nav class="navbar" role="navigation"></nav>
    </div>
    <!-- END PAGE SIDEBAR -->
    <div class="page-content-col">
      <!-- BEGIN PAGE BASE CONTENT -->
      <div class="row">
      <div class="col-md-12">
      <!-- BEGIN EXAMPLE TABLE PORTLET-->
      <div class="portlet box blue">
        <div class="portlet-title">
          <div class="caption">
            <i class="fa fa-floppy-o fa-2x"></i> Formulaire d'enregistrement
          </div>
          <div class="tools"> </div>
        </div>
        <div class="portlet-body">

          <!--<form class="form-horizontal" method="post" >-->
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            <div class="row">
              <div class="form-group">
                <label class="control-label col-md-2">Annonce
                  <span class="required"> * </span>
                </label>
                <div class="col-md-8">
                  {{ form_widget(form.annonce) }}
                  {{ form_errors(form.annonce) }}
                </div>
              </div>
              <div class="form-group">
                <label class="control-label col-md-2">Description
                  <span class="required"> * </span>
                </label>
                <div class="col-md-8">
                  {{ form_widget(form.description) }}
                  {{ form_errors(form.description) }}
                </div>
              </div>
              <div class="form-group">
                <label class="control-label col-md-2">Lieu
                  <span class="required"> * </span>
                </label>
                <div class="col-md-8">
                  {{ form_widget(form.lieu) }}
                  {{ form_errors(form.lieu) }}
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label class="control-label col-md-4">Date debut
                    <span class="required"> * </span>
                  </label>
                  <div class="col-md-8">
                    {{ form_widget(form.datedeb) }}
                    {{ form_errors(form.datedeb) }}
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label class="control-label col-md-4">Heure debut
                    <span class="required"> * </span>
                  </label>
                  <div class="col-md-8">
                    {{ form_widget(form.heuredeb) }}
                    {{ form_errors(form.heuredeb) }}
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label class="control-label col-md-4">Date fin
                    <span class="required">  </span>
                  </label>
                  <div class="col-md-8">
                    {{ form_widget(form.datefin) }}
                    {{ form_errors(form.datefin) }}
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label class="control-label col-md-4">Heure fin
                    <span class="required">  </span>
                  </label>
                  <div class="col-md-8">
                    {{ form_widget(form.heurefin) }}
                    {{ form_errors(form.heurefin) }}
                  </div>
                </div>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-3"></label>
              <div class="mt-checkbox-list col-md-6">
                <label class="mt-checkbox mt-checkbox-outline">
                  {{ form_widget(form.statut) }} Activez cet evenement <span></span>
                </label>
              </div>
            </div>
            <div class="form-actions">
              <div class="row">
                <div class="col-md-offset-5 col-md-4 text-right">
                  <input type="submit" class="btn blue" value="Enregistrer">
                </div>
              </div>
            </div>
            {{ form_end(form) }}
          </form>
        </div>
      </div>
      <!-- END EXAMPLE TABLE PORTLET-->
      </div>
      </div>
    <!-- END PAGE BASE CONTENT -->
    </div>
  </div>
</div>
<!-- END SIDEBAR CONTENT LAYOUT -->

{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <!-- BEGIN PAGE LEVEL PLUGINS -->
  <script src="{{ asset('ressources/vendor/js/form/select2.full.min.js')}}" type="text/javascript"></script>
  <script src="{{ asset('ressources/vendor/js/form/jquery.validate.min.js') }}" type="text/javascript"></script>
  <script src="{{ asset('ressources/vendor/js/form/additional-methods.min.js') }}" type="text/javascript"></script>
  <script src="{{ asset('ressources/vendor/js/form/bootstrap-datepicker.min.js') }}" type="text/javascript"></script>
  <script src="{{ asset('ressources/vendor/js/form/form-validation.min.js') }}" type="text/javascript"></script>
  <script src="{{ asset('ressources/vendor/ckeditor/ckeditor.js') }}" type="text/javascript"></script>
  <script src="{{ asset('ressources/vendor/js/photo/bootstrap-fileinput.js') }}" type="text/javascript"></script>
  <script src="{{ asset('ressources/vendor/js/date/jquery.inputmask.bundle.min.js') }}" type="text/javascript"></script>
  <script src="{{ asset('ressources/vendor/js/date/form-input-mask.min.js') }}" type="text/javascript"></script>

  <!--<script src="//cdn.ckeditor.com/4.5.11/standard/ckeditor.js"></script>-->


{% endblock %}
